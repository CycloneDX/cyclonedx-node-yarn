{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":configMigration",
    ":gitSignOff",
    ":prHourlyLimitNone"
  ],
  "labels": [
    "dependencies"
  ],
  "ignorePaths": [
    "tests/_data/testbeds/**"
  ],
  "schedule": [
    "every weekend"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "@yarnpkg/**"
      ],
      "groupName": "yarn",
      "groupSlug": "yarn"
    },
    {
      "matchPackageNames": [
        "typescript",
        "@types/**",
        "typedoc",
        "typedoc-*",
        "@microsoft/tsdoc",
        "@microsoft/tsdoc-*",
        "ts-loader",
        "tslib"
      ],
      "groupName": "typescript",
      "groupSlug": "typescript"
    },
    {
      "matchPackageNames": [
        "eslint",
        "@eslint/*",
        "@types/eslint",
        "eslint-*",
        "@types/eslint-*",
        "@eslint-community/*",
        "@typescript-eslint/*"
      ],
      "groupName": "eslint",
      "groupSlug": "eslint"
    },
    {
      "matchPackageNames": [
        "mocha",
        "@types/mocha"
      ],
      "groupName": "mocha",
      "groupSlug": "mocha"
    },
    {
      "matchDatasources": [
        "npm"
      ],
      // version is like `tsX.Y` -- need to maintain manually
      "matchPackageNames": [
        "@types/node"
      ],
      "enabled": false
    }
  ]
}
