{
  "private": true,
  "name": "@cyclonedx/yarn-plugin-cyclonedx",
  "version": "1.0.0-alpha",
  "description": "Create CycloneDX Software Bill of Materials (SBOM) from yarn projects.",
  "license": "Apache-2.0",
  "keywords": [
    "CycloneDX",
    "SBOM",
    "BOM",
    "inventory",
    "bill-of-materials",
    "software-bill-of-materials",
    "component",
    "dependency",
    "package-url",
    "PURL",
    "spdx",
    "node",
    "yarn"
  ],
  "homepage": "https://github.com/CycloneDX/cyclonedx-node-yarn#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CycloneDX/cyclonedx-node-yarn.git"
  },
  "bugs": {
    "url": "https://github.com/CycloneDX/cyclonedx-node-yarn/issues"
  },
  "funding": [
    {
      "type": "individual",
      "url": "https://owasp.org/donate/?reponame=www-project-cyclonedx&title=OWASP+CycloneDX"
    }
  ],
  "contributors": [
    {
      "name": "Jan Kowalleck",
      "url": "https://github.com/jkowalleck"
    },
    {
      "name": "Augustus Kling",
      "url": "https://github.com/AugustusKling"
    }
  ],
  "maintainers": [
    {
      "name": "Jan Kowalleck",
      "url": "https://github.com/jkowalleck"
    }
  ],
  "main": "./sources/index.ts",
  "engines": {
    "yarn": ">=4",
    "node": ">=18"
  },
  "dependencies": {
    "@cyclonedx/cyclonedx-library": "^6.4.0",
    "@yarnpkg/cli": "^4.1.0",
    "@yarnpkg/core": "^4.0.3",
    "clipanion": "^4.0.0-rc.3",
    "packageurl-js": "^1.2.1",
    "xmlbuilder2": "^3.1.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "ts5.4",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "@yarnpkg/builder": "4.0.0",
    "c8": "^9.1.0",
    "eslint": "8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-with-typescript": "43.0.1",
    "eslint-plugin-header": "3.1.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsdoc": "48.2.1",
    "eslint-plugin-n": "16.6.2",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-simple-import-sort": "12.0.0",
    "mocha": "10.3.0",
    "npm-run-all2": "^6.1.2",
    "rimraf": "^5.0.5",
    "typescript": "5.4.3"
  },
  "scripts": {
    "build": "run-s -n build:gbtd build:bundle",
    "build:gbtd": "yarn info --json --dependents $npm_package_name > sources/buildtime-dependencies.json",
    "build:bundle": "builder build plugin",
    "build:bundle-dev": "yarn build:bundle --source-map",
    "clean": "rimraf bundles",
    "generate-components-licenses": "node tools/generate-components-licenses.mjs > bundles/components-licenses.md",
    "setup-tests": "node tests/integration/setup.js",
    "test": "run-p --aggregate-output -lc test:\\*",
    "test:standard": "eslint .",
    "test:lint": "tsc --noEmit",
    "test:node": "c8 mocha -p",
    "cs-fix": "eslint --fix .",
    "dogfooding": "YARN_PLUGINS=$PROJECT_CWD/bundles/@yarnpkg/plugin-cyclonedx.js yarn cyclonedx"
  },
  "packageManager": "yarn@4.1.0"
}
