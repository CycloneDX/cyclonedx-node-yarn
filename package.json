{
  "name": "yarn-plugin-sbom",
  "version": "1.0-dev",
  "license": "Apache-2.0",
  "main": "./sources/index.ts",
  "dependencies": {
    "@cyclonedx/cyclonedx-library": "^6.4.0",
    "@yarnpkg/cli": "^4.1.0",
    "@yarnpkg/core": "^4.0.3",
    "@yarnpkg/fslib": "^3.0.2",
    "clipanion": "^4.0.0-rc.2",
    "packageurl-js": "^1.2.1",
    "spdx-license-ids": "^3.0.17",
    "xmlbuilder2": "^3.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.20",
    "@yarnpkg/builder": "^4.0.0",
    "rimraf": "5.x",
    "typescript": "5.x"
  },
  "scripts": {
    "build": "yarn build:btd && yarn build:plugin",
    "build:btd": "yarn gather-buildtime-dependencies",
    "build:plugin": "yarn builder build plugin --source-map",
    "clean": "rimraf bundles",
    "generate-components-licenses": "node tools/generate-components-licenses.mjs > bundles/components-licenses.md",
    "gather-buildtime-dependencies": "yarn info --json --dependents $npm_package_name > sources/buildtime-dependencies.json",
    "test": "node tests/run-all.mjs",
    "dogfooding": "YARN_PLUGINS=$PROJECT_CWD/bundles/@yarnpkg/plugin-sbom.js yarn sbom"
  },
  "packageManager": "yarn@4.1.0"
}
